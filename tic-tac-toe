def getboard(listofmoves, playerinfo):
	i = 0
    listofplaces = ['-', '-', '-', '-', '-', '-', '-', '-', '-']
    playerXorO = playerinfo[0]
    playerstartfirst = playerinfo[1]
    XorO = 'X'
    for i in range(len(listofmoves)):
        n = listofmoves[i]
	    listofplaces[n - 1] = XorO
 	    if XorO == 'O':
       		XorO = 'X'
        else:
        	XorO = 'O'

    #resetting player start first to original state
    playerstartfirst = playerinfo[1]
    
    print(listofplaces[0], listofplaces[1], listofplaces[2])
    print(listofplaces[3], listofplaces[4], listofplaces[5])
    print(listofplaces[6], listofplaces[7], listofplaces[8])
    return listofplaces


